# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 全てのファイルに共通設定
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript/JavaScript関連ファイル
[*.{js,jsx,ts,tsx}]
quote_type = double

# JSON関連ファイル
[*.{json,jsonc}]
insert_final_newline = false

# YAML関連ファイル
[*.{yml,yaml}]
indent_size = 2

# Markdown関連ファイル
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# Package.json
[package.json]
indent_size = 2